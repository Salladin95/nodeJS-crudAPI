{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "removeComments": true,
    "module": "esnext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dest",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*"
  ]
}
